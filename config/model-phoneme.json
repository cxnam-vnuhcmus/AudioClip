{
  "Visdom": {
    "host": "localhost",
    "port": "8097",
    "env_path": "./assets"
  },
  "Setup": {
    "name": "ModelPhoneme",
    "suffix": "CV1",
    "batch_train": 2,
    "batch_test": 2,
    "workers_train": 0,
    "workers_test": 0,
    "epochs": 50,
    "log_interval": 50,
    "saved_models_path": "./assets"
  },
  "Model": {
    "class": "model_phoneme.model.Model",
    "args": {
      "pretrained": false,
      "img_dim": 32,
      "lm_dim": 128
    }
  },
  "Optimizer": {
    "class": "torch.optim.SGD",
    "args": {
      "lr": 5e-5,
      "momentum": 0.9,
      "nesterov": true,
      "weight_decay": 5e-4
    }
  },
  "Scheduler": {
    "class": "torch.optim.lr_scheduler.ExponentialLR",
    "args": {
      "gamma": 0.96
    }
  },
  "Dataset": {
    "class": "model_phoneme.dataset.Dataset",
    "args": {
      "datalist_root": "/home/cxnam/Documents/MyWorkingSpace/Trainer/assets/data.txt",
      "audio_dataroot": "",
      "visual_dataroot": "/home/cxnam/Documents/MyWorkingSpace/MEAD/M003/Features/images",
      "lm_dataroot": "/home/cxnam/Documents/MyWorkingSpace/MEAD/M003/Features/face_meshes",
      "transcript_dataroot": "/home/cxnam/Documents/MyWorkingSpace/MEAD/M003/Features/transcripts",
      "fps": 25,
      "sample_rate": 22050,
      "n_mels": 80,
      "n_fft": 800,
      "img_size": 256,
      "training": {"key": "train", "yes": true, "no": false}
    }
  },
  "Transforms": [
    {
      "class": "utils.transforms.ToTensor1D",
      "args": {}
    },
    {
      "class": "utils.transforms.RandomFlip",
      "args": {"p": 0.5},
      "test": false
    },
    {
      "class": "utils.transforms.RandomScale",
      "args": {"max_scale": 1.50},
      "test": false
    },
    {
      "class": "utils.transforms.RandomPadding",
      "args": {"out_len": 220500},
      "test": false
    },
    {
      "class": "utils.transforms.RandomCrop",
      "args": {"out_len": 220500},
      "test": false
    },
    {
      "class": "utils.transforms.RandomNoise",
      "args": {"snr_min_db": 10.0, "snr_max_db": 120.0, "p": 0.25},
      "test": false
    },
    {
      "class": "utils.transforms.RandomPadding",
      "args": {"out_len": 220500, "train": false},
      "train": false
    },
    {
      "class": "utils.transforms.RandomCrop",
      "args": {"out_len": 220500, "train": false},
      "train": false
    }
  ],
  "Metrics": {
    "Performance": {
      "window_name": null,
      "x_label": "#Epochs",
      "y_label": "Cosine Similarity",
      "width": 1890,
      "height": 416,
      "lines": [
        {
          "line_label": "Val. CSim.",
          "class": "ignite.metrics.CosineSimilarity",
          "args": {},
          "is_checkpoint": true
        }
      ]
    }
  }
}
