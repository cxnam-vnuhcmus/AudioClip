{
  "Setup": {
    "name": "Model_Attn",
    "suffix": "CV1",
    "batch_train": 32,
    "batch_test": 32,
    "workers_train": 0,
    "workers_test": 0,
    "epochs": 100,
    "log_interval": 50,
    "saved_models_path": "./assets"
  },
  "Model": {
    "class": "model_attn.model.Model",
    "args": {
      "img_dim": 16,
      "lm_dim": 128,
      "pretrained": "/home/anhldt/ai_learner/AudioClip/assets/checkpoints/checkpoint_100_attn_mfcc.pt",
      "infer_samples": false
    }
  },
  "Optimizer": {
    "class": "torch.optim.SGD",
    "args": {
      "lr": 5e-5,
      "momentum": 0.9,
      "nesterov": true,
      "weight_decay": 5e-4
    }
  },
  "Scheduler": {
    "class": "torch.optim.lr_scheduler.ExponentialLR",
    "args": {
      "gamma": 0.96
    }
  },
  "Dataset": {
    "class": "model_attn.dataset.Dataset",
    "args": {
      "datalist_root": "./assets/data.txt",
      "audio_dataroot": "/data/anhldt/ai/MEAD/M003/audios",
      "visual_dataroot": "/data/anhldt/ai/MEAD/M003/images",
      "lm_dataroot": "/data/anhldt/ai/MEAD/M003/face_meshes",
      "transcript_dataroot": "/data/anhldt/ai/MEAD/M003/transcripts",
      "fps": 25,
      "sample_rate": 22050,
      "n_mels": 40,
      "n_fft": 128,
      "img_size": 224,
      "training": {"key": "train", "yes": true, "no": false}
    }
  },
  "Transforms": [
    {
      "class": "utils.transforms.ToTensor1D",
      "args": {}
    },
    {
      "class": "utils.transforms.RandomFlip",
      "args": {"p": 0.5},
      "test": false
    },
    {
      "class": "utils.transforms.RandomScale",
      "args": {"max_scale": 1.50},
      "test": false
    },
    {
      "class": "utils.transforms.RandomPadding",
      "args": {"out_len": 220500},
      "test": false
    },
    {
      "class": "utils.transforms.RandomCrop",
      "args": {"out_len": 220500},
      "test": false
    },
    {
      "class": "utils.transforms.RandomNoise",
      "args": {"snr_min_db": 10.0, "snr_max_db": 120.0, "p": 0.25},
      "test": false
    },
    {
      "class": "utils.transforms.RandomPadding",
      "args": {"out_len": 220500, "train": false},
      "train": false
    },
    {
      "class": "utils.transforms.RandomCrop",
      "args": {"out_len": 220500, "train": false},
      "train": false
    }
  ],
  "Metrics": [
      
      {
          "label": "ACC",
          "class": "ignite.metrics.Accuracy",
          "args": {"output_transform": ["y_pred", "y_indices"]},
          "use_for": ["val","test"],
          "save_checkpoint": true
      }
  ]
}
